{
    "name": "BellmanEmulate3L_512",
    "n_gpu": 1,
    "seed": 21,

    "arch": {
        "type": "ThreeLayer",
        "args": {
            "input_dim":4, 
            "output_dim":3,
            "max_nodes":512}
    },
    "data_loader": {
        "type": "BellmanDataLoader",
        "args":{
            "data_dir": "data/",
            "input_csv_file":"DatasetSmall/AgentData.csv", 
            "output_csv_file":"DatasetSmall/ResultsFinal.csv",
            "output_variable":"i_a",
            "cons_scale": false,
            "output_format":"category",
            "categories":{"N":0.0,"L":0.25,"H":0.45},
            "batch_size": 512,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "category_accuracy","no_adapt_falsepositive","no_adapt_falsenegative","low_adapt_falsepositive","low_adapt_falsenegative","high_adapt_falsepositive","high_adapt_falsenegative"
        ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 200,

        "save_dir": "saved/i_a/S21",
        "save_period": 50,
        "verbosity": 1,
        
        "monitor": "min val_loss",
        "early_stop": 15,

        "tensorboard": true
    }
}
