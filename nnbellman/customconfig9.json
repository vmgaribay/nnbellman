{
    "name": "BellmanEmulate5LP_2048",
    "n_gpu": 1,

    "arch": {
        "type": "PudgeFiveLayer",
        "args": {"maxnodes":2048}
    },
    "data_loader": {
        "type": "BellmanDataLoader",
        "args":{
            "data_dir": "data/",
            "input_csv_file":"/Users/victoria/Documents/Scripts/Python/PovertyTrapModel-master/AgentData.csv", 
            "output_csv_file":"/Users/victoria/Documents/Scripts/Python/PovertyTrapModel-master/ResultsFinal.csv",
            "batch_size": 512,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [
        "model_mae", "model_max_ae","consumption_mae","consumption_max_ae","i_a_mae","i_a_max_ae","n_wrong_i_a","n_exceeding_i_a_k"
    ],
    "possible_i_a":[0.0,0.25,0.45],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 200,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 15,

        "tensorboard": true
    }
}
