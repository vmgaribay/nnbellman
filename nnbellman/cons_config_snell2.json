{
    "name": "TestModel",
    "n_gpu": 1,
    "seed": 42,


    "arch": {
        "type": "ThreeLayer",
        "args": {
            "input_dim":4, 
            "output_dim":1,
            "max_nodes":512}
    },
    "data_loader": {
        "type": "BellmanDataLoader",
        "args":{
            "data_dir": "data/",
            "input_csv_file":"DatasetOct/AgentData-Updated30Oct2024.csv", 
            "output_csv_file":"DatasetOct/ResultsFinal-Updated30Oct2024clean.csv",
            "categories":{"N":0.0,"L":0.2,"H":0.5},
            "output_variable":"consumption",
            "scale_output": true,
            "batch_size": 512,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [
        "model_mse", "model_mae", "model_max_ae", "consumption_mae", "consumption_max_ae", "consumption_mpe", "consumption_max_pe"
        ],
    "possible_i_a":[0.0,0.2,0.5],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 200,

        "save_dir": "saved/consumption/S42",
        "save_period": 50,
        "verbosity": 1,
        
        "monitor": "min val_loss",
        "early_stop": 20,

        "tensorboard": true
    }
}
